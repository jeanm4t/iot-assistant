source 'https://rubygems.org'

gem 'rails', '3.2.2'

gem 'pg'

gem 'omniauth'
gem 'omniauth-google-oauth2'
gem 'omniauth-twitter'

gem 'twitter'

gem 'haml-rails'

gem 'thin-rails'

gem 'hashie'

# Gems used only for assets and not required
# in production environments by default.
group :assets do
  gem 'sass-rails',   '~> 3.2.3'
  gem 'uglifier', '>= 1.0.3'
end

gem 'rspec-rails', :group => [:test, :development]
group :test do
  gem 'factory_girl_rails'
  gem 'guard-rspec'
  gem 'webmock', "~> 1.8.3"
  gem 'growl' 
  gem 'capybara'
  gem 'launchy'
end

# Pagination
gem 'kaminari'

# jQuery Rails helpers
gem 'jquery-rails'

# Twitter Bootstrap
gem 'bootstrap-sass'

# HTTP requests
gem 'typhoeus'

# XML parsing
gem 'nokogiri'
